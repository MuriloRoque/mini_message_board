extends layout

block content
  a(href='/new', class='btn btn-primary mt-0 mb-3') New message
  main(class='row row-cols-1 row-cols-md-2')
    each message in messages
      article(class='col-sm-6 bg-light')
        div(class='card border border-primary my-3 p-3')
          h5(class="card-title") #{message.user} :
          p(class="card-text") #{message.text}
          p(class="card-text")
            small(class="text-muted") Date added: #{message.added}
